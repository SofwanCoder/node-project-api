{
  "name": "project",
  "version": "0.0.1",
  "description": "PROJECT API",
  "main": "dist/index.js",
  "engines": {
    "node": "^20.x"
  },
  "scripts": {
    "clean": "rimraf dist",
    "compile": "tsc",
    "server": "node dist/index.js",
    "doc": "tsoa spec",
    "test": "jest ",
    "lint": "eslint -c .eslintrc.js --ext .ts src",
    "migrate:up": "knex migrate:latest",
    "migrate:down": "knex migrate:rollback",
    "dev": "nodemon -x ts-node src/index.ts & nodemon -x npm run doc",
    "build": "npm run clean && npm run doc  && npm run compile",
    "start": "npm run migrate:up & npm run server"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "node"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "testEnvironment": "node",
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "globals": {},
    "modulePaths": [
      "<rootDir>"
    ],
    "testMatch": [
      "**/tests/*.+(ts|tsx)"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/sourcegrid/sg-api"
  },
  "keywords": [
    "project",
    "api"
  ],
  "author": "Sofwancoder",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SofwanCoder/project_api/issues"
  },
  "homepage": "https://github.com/SofwanCoder/project_api#readme",
  "dependencies": {
    "@sequelize/core": "^7.0.0-alpha.33",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "bignumber.js": "^9.1.2",
    "body-parser": "^2.0.0-beta.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "joi": "^17.11.0",
    "js-base64": "^3.7.5",
    "jsonwebtoken": "^9.0.2",
    "juice": "^9.1.0",
    "knex": "^3.0.1",
    "lodash": "^4.17.21",
    "luxon": "^3.4.4",
    "method-override": "^3.0.0",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "node-cron": "^3.0.3",
    "node-graceful-shutdown": "^1.1.5",
    "nodemailer": "^6.9.7",
    "reflect-metadata": "^0.1.13",
    "slugify": "^1.6.6",
    "socket.io": "^4.7.2",
    "strong-error-handler": "^5.0.2",
    "supertest": "^6.3.3",
    "swagger-ui-express": "^5.0.0",
    "tsoa": "^5.1.1",
    "ulid": "^2.3.0",
    "unleash-client": "^5.3.0",
    "winston": "^3.11.0"
